<h1>Here is a list of all Bands</h1>

<% if @bands.any?() %>
  <% @bands.each() do |band| %>
  <ul>
    <li><a href='/band/<%= band.id() %>'> <%= band.name() %>[<a href="/delete_band/<%= band.id() %>">x</a>] </a></li>
  </ul>
  <% end %>
<% else %>
  <h3>There are no bands added yet.</h3>
<% end %>

<form action ='/bands/all' method='post'>
  <label for='band_name'>Enter Band Name Here: </label>
  <input id='band_name' name='band_name' type='text'>
  <button type='submit'> Add Band</button>
</form>

<h4><a href='/'>Return Home</a></h4>
